      "enabled": true
    }
  },

  // LANGUAGE SERVERS & FORMATTING
  "language_servers": ["typescript-language-server", "sql-language-server", "bash-language-server"],
  "lsp": {
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayParameterNameHintsWhenArgumentMatchesName": true,
          "includeInlayFunctionParameterTypeHints": true,
          "includeInlayVariableTypeHints": true,
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true,
          "includeInlayEnumMemberValueHints": true
        }
      }
    }
  },

  // LANGUAGES SPECIFIC SETTINGS
  "languages": {
    "SQL": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "language_server",
      "show_inline_completions": true,
      "inlay_hints": {
        "enabled": true
      }
    },
    "JavaScript": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "prettier",
      "show_inline_completions": true,
      "inlay_hints": {
        "enabled": true
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "TypeScript": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "prettier",
      "show_inline_completions": true,
      "inlay_hints": {
        "enabled": true
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "Shell Script": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "language_server",
      "show_inline_completions": true
    },
    "JSON": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "Markdown": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "prettier",
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 80
    }
  },

  // TERMINAL CONFIGURATION
  "terminal": {
    "dock": "bottom",
    "default_height": 300,
    "shell": {
      "program": "cmd.exe"
    },
    "font_family": "JetBrains Mono",
    "font_size": 14,
    "line_height": "comfortable"
  },

  // SEARCH & REPLACE
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },

  // VERSION CONTROL
  "git": {
    "enabled": true,
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },

  // TELEMETRY & PRIVACY
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // FILE ASSOCIATIONS
  "file_types": {
    "Dockerfile": ["Dockerfile*"],
    "SQL": ["*.sql", "*.ddl", "*.dml"],
    "Shell Script": ["*.sh", "*.bash", "*.zsh", "*.fish"],
    "JavaScript": ["*.js", "*.jsx", "*.mjs"],
    "TypeScript": ["*.ts", "*.tsx"]
  },

  // FEATURES
  "features": {
    "inline_completion_provider": "supermaven"
  },

  // EXPERIMENTAL FEATURES
  "experimental.theme_overrides": {
    "editor.background": "#1a1a1a",
    "terminal.background": "#1a1a1a"
  }
}